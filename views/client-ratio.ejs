  <script>
    // Client-side code to render the pie chart using Chart.js
    document.addEventListener('DOMContentLoaded', () => {
      const canvas = document.getElementById('clientRatioChart');
      canvas.width = 500;
      canvas.height = 500;
  
      const ctx = canvas.getContext('2d');
      const data = {
        labels: ['Delivery Requests', 'Registered Clients'],
        datasets: [{
          data: [<%= deliveryRequestsCount %>, <%= registeredClientsCount %>],
          backgroundColor: ['#20B2FF', '#6c757d'],
        }],
      };
  
      const options = {
        responsive: false, // Set responsive to false
        maintainAspectRatio: false, // Add this line to prevent maintaining aspect ratio
      };
  
      new Chart(ctx, {
        type: 'pie',
        data: data,
        options: options,
      });
    });
  </script>
  
  
